@model List<CMCS.Models.Claim>
@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Manager Dashboard</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center">No claims awaiting approval.</div>
    }
    else
    {
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Lecturer</th>
                    <th>Submitted Date</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate (R)</th>
                    <th>Total Pay (R)</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.LecturerName</td>
                        <td>@claim.SubmittedDate.ToShortDateString()</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>@claim.TotalPay</td>
                        <td>@claim.Status</td>
                        <td>
                            <form asp-action="ApproveClaim" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@claim.Id" />
                                <button type="submit" class="btn btn-success btn-sm">Approve</button>
                            </form>
                            <form asp-action="RejectClaim" method="post" style="display:inline">
                                <input type="hidden" name="id" value="@claim.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
