@model IEnumerable<CMCS.Models.Claim>

@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Lecturer Dashboard</h2>

    <a class="btn btn-primary mb-3" asp-controller="Lecturer" asp-action="SubmitClaim">
        Submit New Claim
    </a>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Lecturer</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total Pay</th>
                <th>Status</th>
                <th>Date Submitted</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.LecturerName</td>
                    <td>@claim.HoursWorked</td>
                    <td>R @claim.HourlyRate</td>
                    <td>R @claim.TotalPay</td>
                    <td>@claim.Status</td>
                    <td>@claim.SubmittedDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
