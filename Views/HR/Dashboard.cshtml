@model CMCS.Models.HrDashboardViewModel
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">HR Dashboard – Approved Claims Overview</h2>

    <div class="text-end mb-3">
        <a href="@Url.Action("ExportReport", "HR")" class="btn btn-success">Export Approved Claims (CSV)</a>
    </div>

    <!-- Summary by Lecturer -->
    <h4 class="mt-4 mb-3">Summary by Lecturer</h4>
    <table class="table table-dark table-striped text-center align-middle">
        <thead>
            <tr>
                <th>Lecturer Name</th>
                <th>Total Claims</th>
                <th>Total Hours</th>
                <th>Total Paid (R)</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Summary != null && Model.Summary.Any())
            {
                foreach (var item in Model.Summary)
                {
                    <tr>
                        <td>@item.LecturerName</td>
                        <td>@item.TotalClaims</td>
                        <td>@item.TotalHours</td>
                        <td>@item.TotalPaid.ToString("C")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-muted">No approved claims found.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Detailed Claims Table -->
    <h4 class="mt-5 mb-3">All Approved Claims</h4>
    <table class="table table-bordered table-hover table-dark text-center align-middle">
        <thead>
            <tr>
                <th>Lecturer</th>
                <th>Submitted Date</th>
                <th>Hours Worked</th>
                <th>Hourly Rate (R)</th>
                <th>Total Pay (R)</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Claims != null && Model.Claims.Any())
            {
                foreach (var claim in Model.Claims)
                {
                    <tr>
                        <td>@claim.LecturerName</td>
                        <td>@claim.SubmittedDate.ToString("yyyy-MM-dd")</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>@claim.TotalPay.ToString("C")</td>
                        <td><span class="badge bg-success">@claim.Status</span></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-muted">No approved claims available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
